{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:vue/vue3-recommended",
        "plugin:vue/vue3-essential",
        "prettier"
    ],
    "overrides": [
        {
            "files": ["./src/**/*.{js,jsx,ts,tsx,vue}", "./src/**/*.ts"],
            "excludedFiles": ["./src/main.ts"],
            "parserOptions": {
                "project": "./tsconfig.json"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json",
        "extraFileExtensions": [".vue"],
        "parser": "@typescript-eslint/parser"
    },
    "plugins": ["vue", "@typescript-eslint"],
    "rules": {
        "semi": ["error", "always"] // Add this line to enforce semicolons at the end of each statement
    }
}
